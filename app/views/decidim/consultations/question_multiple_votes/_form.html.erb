<div class="card">
  <% if group %>
    <div class="card__top">
      <div class="card__content multiple_votes_form_group_title">
        <h5 class="card__title"><label>
          <% if current_participatory_space.has_suplents? %>
            <input type="checkbox" id="response_group_<%= group.id %>">
          <% end %>
          <%= translated_attribute group.title %>
        </label></h5>
      </div>
    </div>
  <% end %>
  <div class="card__content multiple_votes_form">
    <% responses.each do |response| %>
      <div>
        <%= check_box_tag "responses[]", response.id, false, id: "vote_id_#{response.id}" %>
        <%= form.label :id, translated_attribute(response.title), for: "vote_id_#{response.id}" %>
      </div>
    <% end %>
  </div>
</div>
